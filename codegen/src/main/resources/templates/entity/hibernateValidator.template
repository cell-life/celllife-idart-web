package ${hibernateValidator.packageName}

import ${entity.packageName}.${entity.className}
import ${entity.packageName}.${entity.className}ValidationException
import ${validator.packageName}.${validator.className}
import org.springframework.beans.factory.annotation.Autowired
import org.springframework.stereotype.Component

import javax.validation.ConstraintViolation
import javax.validation.ValidatorFactory

/**
 */
@Component class ${hibernateValidator.className} implements ${validator.className} {

    @Autowired ValidatorFactory validatorFactory

    @Override
    void validate(${entity.className} ${entity.fieldName}) throws ${entity.className}ValidationException {

        Set<ConstraintViolation<${entity.className}>> constraintViolations = validatorFactory.validator.validate(${entity.fieldName})

        if (!constraintViolations.empty) {
            throw new ${entity.className}ValidationException(constraintViolations)
        }
    }
}
