<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="contactmechanism-1" author="kevin.sewell">

        <createTable tableName="contact_mechanism">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(255)"/>
            <column name="electronic_address_string" type="varchar(255)"/>
            <column name="address1" type="varchar(255)"/>
            <column name="address2" type="varchar(255)"/>
            <column name="directions" type="varchar(255)"/>
            <column name="area_code" type="varchar(255)"/>
            <column name="contact_number" type="varchar(255)"/>
            <column name="country_code" type="varchar(255)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
