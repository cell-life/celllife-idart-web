<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="product-1" author="kevin.sewell">

        <createTable tableName="product">
            <column name="identifier" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
        </createTable>

        <createTable tableName="medication">
            <column name="identifier" type="varchar(31)">
                <constraints references="product(identifier)" foreignKeyName="product_medication_fk"/>
            </column>
            <column name="drug" type="varchar(31)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
