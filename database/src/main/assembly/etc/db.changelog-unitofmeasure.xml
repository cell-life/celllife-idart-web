<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="unitofmeasure-1" author="kevin.sewell">

        <createTable tableName="unit_of_measure_type">
            <column name="code" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(2000)"/>
        </createTable>

        <createTable tableName="unit_of_measure">
            <column name="code" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(2000)"/>
            <column name="type" type="varchar(31)">
                <constraints references="unit_of_measure_type(code)" foreignKeyName="unit_of_measure_type_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
