<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="facility-1" author="kevin.sewell">

        <createTable tableName="facility">
            <column name="identifier" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(31)"/>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(2000)"/>
            <column name="area" type="numeric"/>
            <column name="area_uom" type="varchar(31)"/>
            <column name="located_at_facility" type="varchar(31)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
