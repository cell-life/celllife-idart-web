<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 version="2.0">

    <access>FIELD</access>

    <!-- Authority -->

    <entity class="org.celllife.idart.domain.authority.Authority">
        <attributes>
            <embedded-id name="id">
                <attribute-override name="value">
                    <column name="id"/>
                </attribute-override>
            </embedded-id>
            <basic name="name"/>
            <basic name="description"/>
        </attributes>
    </entity>

</entity-mappings>