<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 version="2.0">

    <access>FIELD</access>

    <!-- Patient -->

    <entity class="org.celllife.idart.domain.patient.Patient">

        <attributes>
            <embedded-id name="identifier">
                <attribute-override name="value">
                    <column name="identifier"/>
                </attribute-override>
            </embedded-id>
            <embedded name="person">
                <attribute-override name="value">
                    <column name="person_identifier"/>
                </attribute-override>
                <attribute-override name="type">
                    <column name="person_type"/>
                </attribute-override>
            </embedded>
            <embedded name="valid">
                <attribute-override name="fromDate">
                    <column name="valid_from_date"/>
                </attribute-override>
                <attribute-override name="thruDate">
                    <column name="valid_thru_date"/>
                </attribute-override>
            </embedded>
        </attributes>

    </entity>

</entity-mappings>