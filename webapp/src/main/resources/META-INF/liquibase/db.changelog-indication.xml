<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="indication-1" author="kevin.sewell">

        <createTable tableName="indication">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="indication_names">
            <column name="indication" type="bigint">
                <constraints references="indication(pk)" foreignKeyName="indication_names_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="indication_codes">
            <column name="indication" type="bigint">
                <constraints references="indication(pk)" foreignKeyName="indication_codes_fk"/>
            </column>
            <column name="system" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="indication_descriptions">
            <column name="indication" type="bigint">
                <constraints references="indication(pk)" foreignKeyName="indication_descriptions_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
