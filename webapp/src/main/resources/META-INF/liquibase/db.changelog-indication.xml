<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="indication-1" author="kevin.sewell">

        <createTable tableName="indication">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="names" type="bigint">
                <constraints references="names(pk)" foreignKeyName="indication_names_fk"/>
            </column>
            <column name="descriptions" type="bigint">
                <constraints references="descriptions(pk)" foreignKeyName="indication_descriptions_fk"/>
            </column>
            <column name="codes" type="bigint">
                <constraints references="codes(pk)" foreignKeyName="indication_codes_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
