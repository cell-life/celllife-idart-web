<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="unitofmeasure-1" author="kevin.sewell">

        <createTable tableName="unit_of_measure_type">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="unit_of_measure_type_names">
            <column name="unit_of_measure_type" type="bigint">
                <constraints references="unit_of_measure_type(pk)" foreignKeyName="unit_of_measure_type_names_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="unit_of_measure">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="bigint">
                <constraints references="unit_of_measure_type(pk)" foreignKeyName="unit_of_measure_type_fk"/>
            </column>
        </createTable>

        <createTable tableName="unit_of_measure_names">
            <column name="unit_of_measure" type="bigint">
                <constraints references="unit_of_measure(pk)" foreignKeyName="unit_of_measure_names_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="unit_of_measure_codes">
            <column name="unit_of_measure" type="bigint">
                <constraints references="unit_of_measure(pk)" foreignKeyName="unit_of_measure_codes_fk"/>
            </column>
            <column name="system" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
