<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="prescription-1" author="kevin.sewell">

        <createTable tableName="prescription">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="prescriber" type="bigint"/>
            <column name="patient" type="bigint"/>
            <column name="date_written" type="date"/>
        </createTable>

        <createTable tableName="prescription_identifiers">
            <column name="prescription" type="bigint">
                <constraints references="prescription(id)" foreignKeyName="prescription_identifiers_fk"/>
            </column>
            <column name="number" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="system" type="varchar(40)"/>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
            <column name="assigner" type="bigint"/>
        </createTable>

        <createTable tableName="prescribed_medication">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="prescription" type="bigint">
                <constraints references="prescription(id)" foreignKeyName="prescribed_medication_prescription_fk"/>
            </column>
            <column name="reason_for_prescribing" type="varchar(2000)"/>
            <column name="medication" type="bigint"/>
            <column name="valid_from_date" type="date"/>
            <column name="valid_thru_date" type="date"/>
            <column name="number_of_repeats" type="integer"/>
            <column name="quantity" type="numeric"/>
            <column name="quantity_uom" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="prescribed_medication_qty_uom_fk"/>
            </column>
            <column name="expected_supply_duration" type="numeric"/>
            <column name="expected_supply_duration_uom" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="prescribed_medication_duration_uom_fk"/>
            </column>
            <column name="substitution" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="prescribed_medication_substitution_fk"/>
            </column>
            <column name="substitution_reason" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="prescribed_medication_substitution_reason_fk"/>
            </column>
        </createTable>

        <createTable tableName="prescribed_medication_indications">
            <column name="prescribed_medication" type="bigint">
                <constraints references="prescribed_medication(id)" foreignKeyName="prescribed_medication_indications_fk"/>
            </column>
            <column name="indications" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="indications_prescribed_medication_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
