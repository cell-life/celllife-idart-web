<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="patient-1" author="kevin.sewell">

        <createTable tableName="patient">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
            <column name="person" type="bigint"/>
            <column name="from_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="thru_date" type="DATE"/>
        </createTable>

        <createTable tableName="patient_identifiers">
            <column name="patient" type="varchar(31)">
                <constraints references="patient(pk)" foreignKeyName="patient_identifiers_fk"/>
            </column>
            <column name="system" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
