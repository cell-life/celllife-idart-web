<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="patient-1" author="kevin.sewell">

        <createTable tableName="patient">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="patient_identifier">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="value" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="patient" type="BIGINT">
                <constraints references="patient(id)" foreignKeyName="patient_identifier_fk"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="patient_identifier"
                             columnNames="value, type"/>
    </changeSet>

</databaseChangeLog>
