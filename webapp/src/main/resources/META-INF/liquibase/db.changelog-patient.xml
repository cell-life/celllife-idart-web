<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="patient-1" author="kevin.sewell">

        <createTable tableName="patient">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="data_of_birth" type="DATE"/>
            <column name="gender" type="varchar(255)"/>
            <column name="mobile_number" type="varchar(255)"/>
        </createTable>

        <createTable tableName="patient_identifier">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="value" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
            <column name="patient" type="bigint">
                <constraints references="patient(id)" foreignKeyName="patient_identifier_fk"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="patient_identifier"
                             columnNames="value, type"/>
    </changeSet>

</databaseChangeLog>
