<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="clinic-1" author="kevin.sewell">

        <createTable tableName="clinic">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="application_id" type="VARCHAR(255)">
                <constraints unique="true" uniqueConstraintName="clinic_application_id"/>
            </column>
        </createTable>

        <createTable tableName="clinic_identifier">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="value" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="clinic" type="BIGINT">
                <constraints references="clinic(id)" foreignKeyName="clinic_identifier_fk"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="clinic_identifier"
                             columnNames="value,type"/>

    </changeSet>

</databaseChangeLog>
