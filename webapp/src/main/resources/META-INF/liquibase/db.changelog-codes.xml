<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="codes-1" author="kevin.sewell">

        <createTable tableName="codes">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="codes_codes">
            <column name="codes" type="bigint">
                <constraints references="codes(pk)" foreignKeyName="codes_codes_fk"/>
            </column>
            <column name="system" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="codes_codes" columnNames="codes,system"/>

    </changeSet>

</databaseChangeLog>
