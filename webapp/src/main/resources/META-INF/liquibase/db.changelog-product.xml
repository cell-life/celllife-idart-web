<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="product-1" author="kevin.sewell">

        <createTable tableName="product">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
        </createTable>

        <createTable tableName="product_identifiers">
            <column name="product" type="varchar(31)">
                <constraints references="product(pk)" foreignKeyName="product_identifiers_fk"/>
            </column>
            <column name="system" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
        </createTable>

        <createTable tableName="good">
            <column name="pk" type="varchar(31)">
                <constraints references="product(pk)" foreignKeyName="product_good_fk"/>
            </column>
            <column name="finished_good" type="bigint"/>
        </createTable>

        <createTable tableName="medication">
            <column name="pk" type="varchar(31)">
                <constraints references="product(pk)" foreignKeyName="product_medication_fk"/>
            </column>
            <column name="drug" type="bigint"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
