<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="product-1" author="kevin.sewell">

        <createTable tableName="product">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar(255)"/>
        </createTable>

        <createTable tableName="good">
            <column name="id" type="bigint">
                <constraints primaryKey="true" references="product(id)" foreignKeyName="product_good_fk"/>
            </column>
            <column name="finished_good" type="bigint"/>
        </createTable>

        <createTable tableName="good_identifiers">
            <column name="good" type="bigint">
                <constraints references="good(id)" foreignKeyName="good_identifiers_fk"/>
            </column>
            <column name="number" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="system" type="varchar(40)"/>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
            <column name="assigner" type="bigint"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
