<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="entrysite-1" author="kevin.sewell">

        <createTable tableName="entry_site">
            <column name="pk" type="bigint">
                <constraints primaryKey="true" />
            </column>
        </createTable>

        <createTable tableName="entry_site_names">
            <column name="entry_site" type="bigint">
                <constraints references="entry_site(pk)" foreignKeyName="entry_site_names_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="entry_site_codes">
            <column name="entry_site" type="bigint">
                <constraints references="entry_site(pk)" foreignKeyName="entry_site_codes_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="entry_site_descriptions">
            <column name="entry_site" type="bigint">
                <constraints references="entry_site(pk)" foreignKeyName="entry_site_descriptions_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
