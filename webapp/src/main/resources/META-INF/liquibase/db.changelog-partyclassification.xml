<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="partyclassification-1" author="kevin.sewell">

        <createTable tableName="party_classification">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(10)"/>
            <column name="description" type="varchar(255)"/>
            <column name="parent" type="bigint">
                <constraints references="party_classification(id)" foreignKeyName="parent_party_classification_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
