<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="party-1" author="kevin.sewell">

        <createTable tableName="party">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="party_identifiers">
            <column name="party" type="varchar(31)">
                <constraints references="party(pk)" foreignKeyName="party_identifiers_fk"/>
            </column>
            <column name="system" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
        </createTable>

        <createTable tableName="party_classifications">
            <column name="party" type="varchar(31)">
                <constraints references="party(pk)" foreignKeyName="party_classifications_fk"/>
            </column>
            <column name="classification" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
        </createTable>

        <createTable tableName="party_contact_mechanisms">
            <column name="party" type="varchar(31)">
                <constraints references="party(pk)" foreignKeyName="party_contact_mechanisms_fk"/>
            </column>
            <column name="contact_mechanism" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
            <column name="non_solicitation_indicator" type="bit"/>
            <column name="extension" type="varchar(10)"/>
            <column name="comment" type="varchar(2000)"/>
        </createTable>

        <createTable tableName="organisation">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true" references="party(pk)" foreignKeyName="organisation_fk"/>
            </column>
            <column name="name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="legal_organisation">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true" references="organisation(pk)" foreignKeyName="legal_organisation_fk"/>
            </column>
            <column name="tax_registration_number" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="informal_organisation">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true" references="organisation(pk)" foreignKeyName="informal_organisation_fk"/>
            </column>
        </createTable>

        <createTable tableName="person">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true" references="party(pk)" foreignKeyName="person_party_fk"/>
            </column>
            <column name="last_name" type="varchar(40)"/>
            <column name="first_name" type="varchar(40)"/>
            <column name="middle_names" type="varchar(40)"/>
            <column name="personal_title" type="varchar(40)"/>
            <column name="suffix" type="varchar(40)"/>
            <column name="nickname" type="varchar(40)"/>
            <column name="gender" type="varchar(40)"/>
            <column name="birth_date" type="date"/>
            <column name="mothers_maiden_name" type="varchar(40)"/>
            <column name="marital_status" type="varchar(40)"/>
            <column name="total_years_work_experience" type="integer"/>
            <column name="comment" type="varchar(255)"/>
        </createTable>

        <createTable tableName="physical_characteristic">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="person" type="varchar(31)">
                <constraints references="person(pk)" foreignKeyName="person_physical_characteristic_fk"/>
            </column>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
        </createTable>

        <createTable tableName="height">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"
                             references="physical_characteristic(pk)"
                             foreignKeyName="height_physical_characteristic_fk"/>
            </column>
            <column name="value" type="numeric"/>
            <column name="unit_of_measure" type="varchar(31)">
                <constraints references="unit_of_measure(pk)" foreignKeyName="height_unit_of_measure_fk"/>
            </column>
        </createTable>

        <createTable tableName="weight">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"
                             references="physical_characteristic(pk)"
                             foreignKeyName="weight_physical_characteristic_fk"/>
            </column>
            <column name="value" type="numeric"/>
            <column name="unit_of_measure" type="varchar(31)">
                <constraints references="unit_of_measure(pk)" foreignKeyName="weight_unit_of_measure_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
