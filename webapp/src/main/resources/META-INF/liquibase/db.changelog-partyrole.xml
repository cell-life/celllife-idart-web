<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="partyrole-1" author="kevin.sewell">

        <createTable tableName="party_role">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="identifiers" type="bigint">
                <constraints references="identifiers(pk)" foreignKeyName="party_role_identifiers_fk"/>
            </column>
            <column name="from_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="thru_date" type="DATE"/>
        </createTable>

        <createTable tableName="party_role_facilities">
            <column name="party_role" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="from_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="thru_date" type="DATE"/>
            <column name="facility" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="person_role">
            <column name="pk" type="bigint">
                <constraints primaryKey="true" references="party_role(pk)" foreignKeyName="person_role_party_role_fk"/>
            </column>
            <column name="person" type="bigint"/>
        </createTable>

        <createTable tableName="patient">
            <column name="pk" type="bigint">
                <constraints primaryKey="true" references="person_role(pk)" foreignKeyName="patient_person_role_fk"/>
            </column>
        </createTable>

        <createTable tableName="practitioner">
            <column name="pk" type="bigint">
                <constraints primaryKey="true" references="person_role(pk)"
                             foreignKeyName="practitioner_person_role_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
