<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="assignment-1" author="kevin.sewell">

        <createTable tableName="assignment">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="doctor" type="bigint"/>
            <column name="clinic" type="bigint"/>
        </createTable>

        <addUniqueConstraint tableName="assignment" columnNames="doctor, clinic"/>

    </changeSet>

</databaseChangeLog>
