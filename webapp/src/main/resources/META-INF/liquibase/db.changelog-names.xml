<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="names-1" author="kevin.sewell">

        <createTable tableName="names">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="names_names">
            <column name="names" type="bigint">
                <constraints references="names(pk)" foreignKeyName="names_names_fk"/>
            </column>
            <column name="locale" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="names_names" columnNames="names,locale"/>

    </changeSet>

</databaseChangeLog>
