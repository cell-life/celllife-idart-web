<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="facility-1" author="kevin.sewell">

        <createTable tableName="facility">
            <column name="pk" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(40)"/>
            <column name="identifiers" type="bigint">
                <constraints references="identifiers(pk)" foreignKeyName="facility_identifiers_fk"/>
            </column>
            <column name="names" type="bigint">
                <constraints references="identifiers(pk)" foreignKeyName="facility_names_fk"/>
            </column>
            <column name="descriptions" type="bigint">
                <constraints references="descriptions(pk)" foreignKeyName="facility_descriptions_fk"/>
            </column>
            <column name="area" type="numeric"/>
            <column name="area_uom" type="bigint">
                <constraints references="unit_of_measure(pk)" foreignKeyName="area_uom_fk"/>
            </column>
        </createTable>

        <createTable tableName="clinic">
            <column name="pk" type="bigint">
                <constraints references="facility(pk)" foreignKeyName="facility_clinic_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
