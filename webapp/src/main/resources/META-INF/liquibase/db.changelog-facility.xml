<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="facility-1" author="kevin.sewell">

        <createTable tableName="facility">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(40)"/>
            <column name="description" type="varchar(255)"/>
            <column name="area" type="numeric"/>
            <column name="area_uom" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="area_uom_coded_concept_fk"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
