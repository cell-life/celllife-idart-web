<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="practitioner-1" author="kevin.sewell">

        <createTable tableName="practitioner">
            <column name="pk" type="varchar(31)">
                <constraints primaryKey="true"/>
            </column>
            <column name="person" type="varchar(31)"/>
            <column name="from_date" type="DATE"/>
            <column name="thru_date" type="DATE"/>
        </createTable>

        <createTable tableName="practitioner_identifiers">
            <column name="practitioner" type="varchar(31)">
                <constraints references="practitioner(pk)" foreignKeyName="practitioner_identifiers_fk"/>
            </column>
            <column name="system" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(31)">
                <constraints nullable="false"/>
            </column>
            <column name="from_date" type="date"/>
            <column name="thru_date" type="date"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
