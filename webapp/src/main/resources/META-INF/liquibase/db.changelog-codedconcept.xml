<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="codedconcept-1" author="kevin.sewell">

        <createTable tableName="coded_concept">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="parent" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="coded_concept_parent_fk"/>
            </column>
        </createTable>

        <createTable tableName="coded_concept_codes">
            <column name="coded_concept" type="bigint">
                <constraints references="coded_concept(id)" foreignKeyName="coded_concept_codes_fk"/>
            </column>
            <column name="system" type="varchar(40)"/>
            <column name="code" type="varchar(10)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
