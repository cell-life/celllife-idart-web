<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="doctor-1" author="kevin.sewell">

        <createTable tableName="doctor">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="active" type="boolean"/>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
        </createTable>

        <createTable tableName="doctor_identifier">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="value" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
            <column name="doctor" type="bigint">
                <constraints references="doctor(id)" foreignKeyName="doctor_identifier_fk"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="doctor_identifier"
                             columnNames="value, type"/>
    </changeSet>

</databaseChangeLog>
