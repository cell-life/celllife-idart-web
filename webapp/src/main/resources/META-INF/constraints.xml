<?xml version="1.0" encoding="UTF-8"?>
<constraint-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xmlns="http://jboss.org/xml/ns/javax/validation/mapping"
                     xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping http://jboss.org/xml/ns/javax/validation/mapping/validation-mapping-1.1.xsd">

    <default-package>org.celllife.idart.domain.person</default-package>

    <bean class="Person" ignore-annotations="true">
        <field name="firstName">
            <constraint annotation="javax.validation.constraints.NotNull"/>
        </field>
        <field name="lastName">
            <constraint annotation="javax.validation.constraints.NotNull"/>
        </field>
    </bean>

</constraint-mappings>